<div class="home-wraper">
  <h1 class="text-center">Trouvez votre futur cocon selon vos critères !</h1>
  <div class="home-form">
    <div class="form-wrap">
      <%= form_tag cities_path, method: :get do %>
      <%= text_field_tag :name, nil, required: true,
       placeholder: "Recherche une ville" %>
      <div class="d-flex p-3">
        A quelle distance maximum de cette ville ?
        <%= number_field_tag :max_distance_km, nil, min: 1, width: 1, value: 10 %>
        km
      </div>
      <div class="checkboxes">
        <%= check_box_tag "supermarket" %> Supermarchés
        <%= check_box_tag "fibre" %> Fibre
        <%= check_box_tag "doctor" %> Médecin
        <%= check_box_tag "secondary_school" %> Enseignement secondaire
        <%= check_box_tag "primary_school" %> Ecole primaire
        <%= check_box_tag "network" %> 4G
        <%= check_box_tag "commodity" %> Commerces
      </div>
    <%= submit_tag "Rechercher sur ces critères", class: "btn" %>
    </div>
  <% end %>
  </div>
</div>
